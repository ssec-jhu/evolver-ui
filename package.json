{
  "name": "@jhu-software/evolver-ui",
  "version": "1.0.0",
  "description": "reference web app implementation for the evolver, an opensource bio reactor produced by fynchbio.com",
  "license": "BSD-3-Clause",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "bootstrap_dev_db": "npx prisma migrate dev --name init",
    "bootstrap_prod_db": "npx prisma migrate deploy && npx prisma generate",
    "bootstrap_evolver_ts_client": "npx @hey-api/openapi-ts -i openapi.json -o client",
    "build": "npm install && npm run bootstrap_prod_db && npm run bootstrap_evolver_ts_client && remix vite:build",
    "dev": "npm run bootstrap_dev_db && npm run bootstrap_evolver_ts_client && remix vite:dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integ": "playwright test",
    "coverage": "vitest run --coverage",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@conform-to/react": "^1.1.5",
    "@conform-to/zod": "^1.1.5",
    "@fontsource/b612": "^5.0.12",
    "@fontsource/b612-mono": "^5.0.19",
    "@heroicons/react": "^2.1.5",
    "@hey-api/client-fetch": "^0.1.10",
    "@hey-api/openapi-ts": "^0.49.0",
    "@prisma/client": "^5.16.2",
    "@remix-run/node": "^2.10.2",
    "@remix-run/react": "^2.10.2",
    "@remix-run/serve": "^2.10.2",
    "clsx": "^2.1.1",
    "isbot": "^4.1.0",
    "json-edit-react": "^1.15.4",
    "njv": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^10.0.5",
    "recharts": "^2.12.7",
    "remix-utils": "^7.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@remix-run/dev": "^2.10.2",
    "@remix-run/testing": "^2.10.3",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.1.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.12.10",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^14.12.3",
    "jsdom": "^24.1.1",
    "msw": "^2.3.4",
    "playwright": "^1.45.3",
    "postcss": "^8.4.38",
    "prettier": "3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
